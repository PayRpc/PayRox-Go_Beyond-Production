# Docker Production Configuration
# Use this for production deployments

# Build configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Service configuration
PAYROX_API_IMAGE=payrox-api:latest
PAYROX_API_PORT=8000
PAYROX_MANIFEST_PORT=3001
PAYROX_WS_PORT=3002

# Resource limits
PAYROX_API_MEMORY=1g
PAYROX_API_CPUS=1.0
REDIS_MEMORY=256m

# Security
PAYROX_USER_ID=10001
PAYROX_GROUP_ID=10001

# Logging
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Health checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s
