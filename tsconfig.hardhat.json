{
  // ðŸŽ¯ CANONICAL TYPESCRIPT CONFIGURATION
  // This is the single source of truth for all TypeScript compilation in the PayRox project.
  // Used by: package.json scripts, Jest, ESLint, CI workflows, and all build tools.
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    // Only use standard DefinitelyTyped packages; do not treat ./types as a typeRoots package,
    // otherwise TS will try to load '@openzeppelin', 'contracts', 'factories' as ambient libs.
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha", "chai"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tasks/*": ["./tasks/*"],
      "@scripts/*": ["./scripts/*"],
      "@test/*": ["./test/*"],
      "@contracts/*": ["./contracts/*"],
      "@typechain/*": ["./typechain-types/*"]
    }
  },
  "include": [
    // Core application code
    "./scripts/**/*",
    "./test/**/*",
    "./tests/**/*",
    "./tasks/**/*",
    "./tools/**/*",
    "./src/**/*",
    
    // Generated types and configs
    "./typechain-types/**/*", // Aligns with ARTIFACTS_PATHS.TYPECHAIN_ROOT
    "./hardhat.config.ts",
    
    // Extended modules
    "./cli/src/**/*",
    "./sdk/src/**/*",
    "./deployable-modules/**/*",
    
    // Legacy include patterns (for compatibility)
    "hardhat.config.ts",
    "scripts",
    "test",
    "tools",
    "types"
  ],
  "exclude": [
    // Build artifacts and dependencies
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "coverage",
    
    // Separate project modules
    "tools/ai-assistant/frontend",
    "tools/ai-assistant/backend", // Has its own tsconfig.json
    
    // Solidity source files (not TypeScript)
    "./contracts/**/*.sol",
    
    // JavaScript test files (not TypeScript)
    "**/*.spec.js",
    "**/*.test.js",
    
    // Temporarily excluded files (specific compilation issues)
    "scripts/deploy/enhanced-cross-chain-deploy.ts",
    "scripts/orchestrate-crosschain.ts",
    "scripts/validate/cross-chain-validator.ts",
    "test/salt-policy-parity.test.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true,
    "experimentalSpecifierResolution": "node"
  }
}
