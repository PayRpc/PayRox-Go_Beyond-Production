# PayRox Production Environment Configuration
# DO NOT COMMIT TO VERSION CONTROL - Add to .gitignore

# Application Settings
NODE_ENV=production
PYTHONPATH=/app
APP_MODULE=app.main:app

# Server Configuration
PORT=8000
WORKERS=2
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120
KEEPALIVE=5

# Service URLs
PAYROX_MANIFEST_URL=http://payrox-manifest:3001
REDIS_URL=redis://redis:6379/0

# Security Settings
CORS_ORIGINS=["https://payrox.com","https://app.payrox.com"]
ALLOWED_HOSTS=["*"]

# Logging
LOG_LEVEL=info
ACCESS_LOG=true

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# AI/ML Settings
OLLAMA_HOST=http://127.0.0.1:11434
PRX_OLLAMA_HOST=http://127.0.0.1:11434

# Monitoring (Configure as needed)
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_ENABLED=true

# Database/Cache Settings
CACHE_TTL=3600
MAX_CONNECTIONS=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_TIMEOUT=300      # 5 minutes
